{
  "task": "LUD_VAE_SIDD", //  root/task/images-models-options
  "gpu_ids": [0],
  "n_channels": 3, // broadcast to "datasets", 1 for grayscale, 3 for color
  "path": {
    "root": "translate",
    "pretrained_net": null // path of pretrained model
  },
  "datasets": {
    "train": {
      "name": "train_dataset", // just name
      "dataroot": [
        "/content/clean/",
        "/content/noisy/"
      ],
      "n_max": null,
      "H_size": 40, // patch size 40 | 64 | 96 | 128 | 192
      "dataloader_shuffle": false,
      "dataloader_num_workers": 8,
      "dataloader_batch_size": 8,
      "H_noise_level": 40,
      "L_noise_level": 20
    },
    "test": {
      "name": "test_dataset", // just name
      "dataroot": [
        "/content/val_clean/",
        "/content/val_noisy/"
      ],
      "H_size": 32,
      "n_max": 20,
      "H_noise_level": 40,
      "L_noise_level": 20
    }
  },
  "train": {
    "optimizer_type": "adam", // fixed, adam is enough
    "optimizer_lr": 1e-4, // learning rate
    "KL_anneal": "linear",
    "KL_anneal_maxiter": 1e8,
    "KL_weight": 1e-4,
    "scheduler_type": "MultiStepLR", // "MultiStepLR" is enough
    "scheduler_milestones": [100000],
    "scheduler_gamma": 0.5,
    "checkpoint_test": 50000, // for testing
    "checkpoint_save": 50000, // for saving model
    "checkpoint_print": 1000 // for print
  }
}
